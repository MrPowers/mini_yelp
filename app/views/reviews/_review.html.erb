<tr>
	<td>
		<strong><%= review.user.name if review.user %></strong> <em><%= review.created_at.strftime("%B %e, %Y") %></em><br />
		
		<% if can? :edit, review %>
			<%= link_to "Edit", edit_restaurant_review_path(:restaurant_id => @restaurant.id, :id => review.id ) %> 
		<% end %>
		
		<% if can? :destroy, review %>
			<%= link_to "Destroy", restaurant_review_path(:restaurant_id => @restaurant.id, :id => review.id), :method => :delete %><br />
		<% end %>

		<%= review.rating %> Stars<br />
		<%= review.body %><br />
	</td>
</tr>